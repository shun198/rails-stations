<%= render partial: 'layouts/flash' %>
<div class="search-textfield">
<%= search_form_for @q, url:movies_path do |f| %>
  <%= f.label :'映画タイトルまたは概要' %>
  <%= f.search_field :name_or_description_cont ,size:40%><br>
  <%= f.radio_button :is_showing_eq,'',{:checked => true} %>全て<br>
  <%= f.radio_button :is_showing_eq,'1' %>上映中<br>
  <%= f.radio_button :is_showing_eq,'0' %>上映予定<br>
  <%= f.submit "検索" %>
<% end %>
</div>
  <h2 class="title">映画一覧</h2>
  <table class = "table table-striped">
  <tr class="table-primary">
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映中</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= link_to "#{movie.id}", "/movies/#{movie.id}"%></td>
    <td><%= movie.name %></td>
    <td><%= movie.year %></td>
    <td><%= movie.description %></td>
    <td><%= image_tag movie.image_url %></td>
    <td><%= movie.is_showing ? '上映中' : '上映予定' %></td>
    <td><%= movie.created_at %></td>
    <td><%= movie.updated_at %></td>
  </tr>
  <% end %>
</table>